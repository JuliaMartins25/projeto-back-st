generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Character {
  id          Int     @id @default(autoincrement())
  image       String
  name        String
  description String
  age         Int
  firstEp     String
  alive       Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("characters")
}

model Easteregg {
  id       Int     @id @default(autoincrement())
  image   String
  title    String
  secrets  String?
  facts    String?
  theories String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("eastereggs")
}
